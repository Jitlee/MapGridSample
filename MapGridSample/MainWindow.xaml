<Window x:Class="MapGridSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">
    <Grid
        x:Name="LayoutRoot"
        Margin="15"
        Height="360"
        Width="720">
        <Canvas
            x:Name="CellCanvas"
            Background="Transparent"
            PreviewMouseLeftButtonDown="CellCanvas_PreviewMouseLeftButtonDown"/>
        <Canvas
            x:Name="GridCanvas"
            IsHitTestVisible="False">
            <Polyline
                x:Name="TestPolyline"
                Stroke="Black"
                StrokeThickness="1"/>
            <Polygon
                x:Name="TestPolygon"
                Stroke="Black"
                Fill="#338855FF"
                StrokeThickness="1"/>
        </Canvas>
        <StackPanel
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <RadioButton
                x:Name="LineRadioButton"
                Content="画线"
                IsChecked="True"
                Margin="5"/>
            <RadioButton
                x:Name="PolygonRadioButton"
                Content="画多变形"
                Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
